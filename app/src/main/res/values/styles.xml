<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomNoActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">9.3dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.02</item>
        <item name="android:textColor">#a0a0a0</item>
    </style>
    <style name="TextStyle2">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
